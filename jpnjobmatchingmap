        // DOM 요소들
        const searchBox = document.getElementById('searchBox');
        const searchResults = document.getElementById('searchResults');
        const filterTabs = document.querySelectorAll('.filter-tab');
        const industryGrid = document.getElementById('industryGrid');
        const jobGrid = document.getElementById('jobGrid');
        const valueKeywords = document.getElementById('valueKeywords');
        const strengthKeywords = document.getElementById('strengthKeywords');

        let currentFilter = null;

        // 정의 섹션 토글 기능
        function toggleDefinitions() {
            const content = document.getElementById('definitionContent');
            const toggle = document.getElementById('definitionToggle');
            
            if (content.classList.contains('expanded')) {
                content.classList.remove('expanded');
                toggle.textContent = '+';
            } else {
                content.classList.add('expanded');
                toggle.textContent = '−';
            }
        }

        // 강점 카테고리별 필터링 함수
        function checkStrengthCategory(strengths, category) {
            const requiredStrengths = strengthCategories[category];
            
            switch(category) {
                case 'communication':
                    return requiredStrengths.every(strength => strengths.includes(strength));
                case 'stress':
                    return requiredStrengths.filter(strength => strengths.includes(strength)).length >= 3;
                case 'intelligence':
                    return requiredStrengths.every(strength => strengths.includes(strength));
                case 'leadership':
                    return requiredStrengths.every(strength => strengths.includes(strength));
                default:
                    return false;
            }
        }

        // 업계 카드 생성
        function renderIndustries(data = industries) {
            industryGrid.innerHTML = data.map(industry => `
                <div class="card industry-card" data-type="industry" data-name="${industry.name}">
                    <div class="card-title">
                        ${industry.name}
                        <span class="keyword-count">${industry.keywords.value.length + industry.keywords.strength.length}개 키워드</span>
                    </div>
                    <div class="card-description">${industry.description}</div>
                    <div class="keywords">
                        ${industry.keywords.value.map(keyword => 
                            `<span class="keyword value" data-keyword="${keyword}" onclick="searchKeyword('${keyword}')" title="가치관: ${keyword}">${keyword}</span>`
                        ).join('')}
                        ${industry.keywords.strength.map(keyword => 
                            `<span class="keyword strength" data-keyword="${keyword}" onclick="searchKeyword('${keyword}')" title="강점: ${keyword}">${keyword}</span>`
                        ).join('')}
                    </div>
                </div>
            `).join('');
        }

        // 직종 카드 생성
        function renderJobs(data = jobs) {
            jobGrid.innerHTML = data.map(job => `
                <div class="card job-card" data-type="job" data-name="${job.name}">
                    <div class="card-title">
                        ${job.name}
                        ${job.hardSkill ? '<span class="hard-skill-badge">전문기술 필요</span>' : ''}
                        <span class="keyword-count">${job.keywords.value.length + job.keywords.strength.length}개 키워드</span>
                    </div>
                    <div class="card-description">${job.description}</div>
                    <div class="keywords">
                        ${job.keywords.value.map(keyword => 
                            `<span class="keyword value" data-keyword="${keyword}" onclick="searchKeyword('${keyword}')" title="가치관: ${keyword}">${keyword}</span>`
                        ).join('')}
                        ${job.keywords.strength.map(keyword => 
                            `<span class="keyword strength" data-keyword="${keyword}" onclick="searchKeyword('${keyword}')" title="강점: ${keyword}">${keyword}</span>`
                        ).join('')}
                    </div>
                </div>
            `).join('');
        }

        // 키워드 색인 생성
        function renderKeywordIndex() {
            // 가치관 키워드 - 참조 개수 기준 내림차순 정렬
            const sortedValueKeywords = Object.entries(keywordIndex.value)
                .sort(([,a], [,b]) => b.length - a.length);

            valueKeywords.innerHTML = sortedValueKeywords
                .map(([keyword, references]) => `
                <li class="index-item" data-keyword="${keyword}">
                    <div class="index-keyword">${keyword} <span class="keyword-count">${references.length}개</span></div>
                    <div class="index-references">
                        ${references.map(ref => {
                            const isIndustry = ref.endsWith('업계');
                            return `<a href="#" class="reference-link ${isIndustry ? 'industry' : ''}" onclick="searchKeyword('${ref}')" title="${ref}로 이동">${ref}</a>`;
                        }).join('')}
                    </div>
                </li>
            `).join('');

            // 강점 키워드 - 참조 개수 기준 내림차순 정렬
            const sortedStrengthKeywords = Object.entries(keywordIndex.strength)
                .sort(([,a], [,b]) => b.length - a.length);

            strengthKeywords.innerHTML = sortedStrengthKeywords
                .map(([keyword, references]) => `
                <li class="index-item" data-keyword="${keyword}">
                    <div class="index-keyword">${keyword} <span class="keyword-count">${references.length}개</span></div>
                    <div class="index-references">
                        ${references.map(ref => {
                            const isIndustry = ref.endsWith('업계');
                            return `<a href="#" class="reference-link ${isIndustry ? 'industry' : ''}" onclick="searchKeyword('${ref}')" title="${ref}로 이동">${ref}</a>`;
                        }).join('')}
                    </div>
                </li>
            `).join('');
        }

        // 검색 기능
        function searchKeyword(keyword) {
            searchBox.value = keyword;
            performSearch();
            
            // 검색 결과가 있으면 해당 섹션으로 스크롤
            setTimeout(() => {
                const firstResult = document.querySelector('.highlight');
                if (firstResult) {
                    firstResult.scrollIntoView({ behavior: 'smooth', block: 'center' });
                }
            }, 100);
        }

        function performSearch() {
            const query = searchBox.value.toLowerCase().trim();
            const cards = document.querySelectorAll('.card');
            const indexItems = document.querySelectorAll('.index-item');
            
            let visibleCount = 0;
            let matchedKeywords = new Set();

            // 카드 필터링
            cards.forEach(card => {
                const cardName = card.dataset.name.toLowerCase();
                const cardText = card.textContent.toLowerCase();
                const keywords = Array.from(card.querySelectorAll('.keyword')).map(k => k.textContent.toLowerCase());
                
                let shouldShow = false;
                
                if (!query && !currentFilter) {
                    shouldShow = true;
                } else if (query) {
                    if (cardName.includes(query) || cardText.includes(query) || keywords.some(k => k.includes(query))) {
                        shouldShow = true;
                        keywords.forEach(k => {
                            if (k.includes(query)) matchedKeywords.add(k);
                        });
                    }
                }

                // 필터 적용
                if (currentFilter) {
                    const valueKeywords = Array.from(card.querySelectorAll('.keyword.value')).map(k => k.textContent);
                    const strengthKeywords = Array.from(card.querySelectorAll('.keyword.strength')).map(k => k.textContent);
                    
                    if (['협조성', '성실성', '주체성', '도전정신', '공헌', '향상심', '책임감', '융통성'].includes(currentFilter)) {
                        // 가치관 필터링
                        if (!valueKeywords.includes(currentFilter)) {
                            shouldShow = false;
                        } else if (!query) {
                            shouldShow = true;
                        }
                    } else if (['communication', 'stress', 'intelligence', 'leadership'].includes(currentFilter)) {
                        // 강점 카테고리 필터링
                        if (!checkStrengthCategory(strengthKeywords, currentFilter)) {
                            shouldShow = false;
                        } else if (!query) {
                            shouldShow = true;
                        }
                    }
                }

                card.style.display = shouldShow ? 'block' : 'none';
                card.classList.toggle('highlight', shouldShow && (query || currentFilter));
                
                if (shouldShow) visibleCount++;
            });

            // 색인 하이라이트
            indexItems.forEach(item => {
                const keyword = item.dataset.keyword.toLowerCase();
                const shouldHighlight = keyword.includes(query) && query;
                item.classList.toggle('highlight', shouldHighlight);
            });

            // 검색 결과 표시
            if (query || currentFilter) {
                searchResults.classList.remove('hidden');
                
                if (query && currentFilter) {
                    searchResults.innerHTML = `
                        🎯 "${query}" + ${getFilterName(currentFilter)} 검색결과: <strong>${visibleCount}개</strong> 매칭
                        ${matchedKeywords.size > 0 ? `| 키워드: ${Array.from(matchedKeywords).join(', ')}` : ''}
                    `;
                } else if (query) {
                    if (visibleCount > 0) {
                        searchResults.innerHTML = `
                            🎯 "${query}" 검색결과: <strong>${visibleCount}개</strong> 발견 
                            ${matchedKeywords.size > 0 ? `| 매칭된 키워드: ${Array.from(matchedKeywords).join(', ')}` : ''}
                        `;
                    } else {
                        searchResults.innerHTML = `❌ "${query}"에 대한 검색 결과가 없습니다. 다른 키워드를 시도해보세요.`;
                    }
                } else if (currentFilter) {
                    searchResults.innerHTML = `
                        ${getFilterName(currentFilter)} 필터: <strong>${visibleCount}개</strong> 매칭
                        ${getFilterDescription(currentFilter)}
                    `;
                }
            } else {
                searchResults.classList.add('hidden');
            }
        }

        function getFilterName(filter) {
            const names = {
                '협조성': '협조성',
                '성실성': '성실성', 
                '주체성': '주체성',
                '도전정신': '도전정신',
                '공헌': '공헌',
                '향상심': '향상심',
                '책임감': '책임감',
                '융통성': '융통성',
                'communication': '💬 커뮤니케이션형 직종',
                'stress': '🛡️ 스트레스 강인형 직종',
                'intelligence': '🧠 논리형 직종',
                'leadership': '👑 리더십형 직종'
            };
            return names[filter] || filter;
        }

        function getFilterDescription(filter) {
            const descriptions = {
                'communication': '(발신력+공감력+경청력 모두 보유)',
                'stress': '(유연성,인내력,냉정함,적극성 중 3개 이상)',
                'intelligence': '(논리적 사고력+정보활용능력 모두 보유)',
                'leadership': '(견인력+모티베이션 능력 모두 보유)'
            };
            return descriptions[filter] || '';
        }

        // 필터 기능
        filterTabs.forEach(tab => {
            tab.addEventListener('click', () => {
                if (tab.classList.contains('active')) {
                    // 이미 활성화된 탭을 클릭하면 필터 해제
                    tab.classList.remove('active');
                    currentFilter = null;
                } else {
                    // 다른 탭 클릭시 해당 필터 적용
                    filterTabs.forEach(t => t.classList.remove('active'));
                    tab.classList.add('active');
                    currentFilter = tab.dataset.filter;
                }
                performSearch();
            });
        });

        // 검색 이벤트
        searchBox.addEventListener('input', performSearch);

        // 키보드 단축키
        document.addEventListener('keydown', (e) => {
            if (e.ctrlKey && e.key === 'k') {
                e.preventDefault();
                searchBox.focus();
            }
            if (e.key === 'Escape') {
                searchBox.value = '';
                filterTabs.forEach(t => t.classList.remove('active'));
                currentFilter = null;
                performSearch();
            }
        });

        // 스무스 스크롤
        document.querySelectorAll('.nav-btn').forEach(btn => {
            btn.addEventListener('click', (e) => {
                e.preventDefault();
                const target = document.querySelector(btn.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth' });
                }
                
                document.querySelectorAll('.nav-btn').forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
            });
        });

        // 초기 렌더링
        renderIndustries();
        renderJobs();
        renderKeywordIndex();

        // 초기 포커스
        searchBox.focus();
    </script>
</body>
</html>
